set guifont=Monaco:h16
set cursorline

" switch to spec or implementation file

function! OpenSpecOrImpl()
    let file_path = system("~/workspace/chorus/ofbiz/hot-deploy/client/ops/scripts/find_spec_or_impl.rb " . expand("%"))
    if (filereadable(file_path))
        exec ":e " . file_path
    else
        echo "No related file found."
    endif
endfunction

macmenu &File.Open\ Tab\.\.\. key=<nop>
map <D-T> :call OpenSpecOrImpl()<CR>

