for FILE in `git diff-index --name-status HEAD -- | cut -c3-` ; do
    if [[ "$FILE" =~ [.]js$ ]]
    then
        if [[ `grep debugger $FILE` ]]
        then
            echo $FILE 'contains debugger!'
            exit 1
        fi
        if [[ `grep console\. $FILE` ]]
        then
            echo $FILE 'contains a reference to console!'
            exit 1
        fi
    fi
done
