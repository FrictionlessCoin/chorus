{{#if shown}}
    <div class="details">
        <div class="right">
            {{#if moreResults}}
                <span class="count">{{t "search.count" shown=shown total=total}}</span>
                <a class="show_all" data-type="hdfs" href="#">{{t "search.show_all"}}</a>
            {{else}}
                <span class="count">{{t "search.count_short" shown=shown}}</span>
            {{/if}}
        </div>
        <span class="title">{{t "search.type.hdfs"}}</span>
    </div>

    <ul>
        {{#each models}}
            <li class="result_item" data-id={{id}}>
                <div class="spacer left"></div>
                <img class="icon" src="{{iconUrl}}"></img>
                <div class="description">
                    <a class="name" href="{{showUrl}}">{{{displaySearchMatch "name"}}}</a>
                    <div class="location">
                        {{t "hdfs.from"}}
                        <span class="instance">{{{instanceLink}}} /</span>
                        <span class="path_parts">{{{completePath}}}</span>
                    </div>
                    <div class="comments">
                        {{#each comments}}
                        <div class="comment">
                            <span class="comment_type">
                            {{#if isInsight}}
                                {{t "activity_stream.insight"}}:
                            {{else}}
                                {{# if isComment}}
                                    {{t "activity_stream.comment"}}:
                                {{else}}
                                    {{t "activity_stream.note"}}:
                                {{/if}}
                            {{/if}}
                            </span>
                            <span class="comment_content">&#8220;{{{displaySearchMatch "content"}}}&#8221;</span>
                        </div>
                        {{/each}}

                        {{#if hasMoreComments}}
                        <div class='hasMore'>
                            <span class="and">{{t "search.comments_more.and"}}</span>
                            <a href="#" class="show_more_comments">
                                {{t "search.comments_more" count=hasMoreComments}}
                            </a>
                        </div>
                        {{/if}}

                        <div class="moreComments hidden">
                            {{#each moreComments}}
                            <div class="comment">
                                <span class="comment_type">
                                {{#if isInsight}}
                                    {{t "insight.title"}}:
                                {{else}}
                                    {{# if isComment}}
                                        {{t "activity_stream.comment"}}:
                                    {{else}}
                                        {{#unless isCommitMessage}}
                                            {{t "activity_stream.note"}}:
                                        {{/unless}}
                                    {{/if}}
                                {{/if}}
                                </span>
                                <span class="comment_content">&#8220;{{{displaySearchMatch "content"}}}&#8221;</span>
                            </div>
                            {{/each}}
                            <a href="#" class="show_fewer_comments">{{t "search.comments_less"}}</a>
                        </div>
                    </div>
                </div>
                <div class="spacer right"></div>
            </li>
        {{/each}}
    </ul>
{{/if}}
