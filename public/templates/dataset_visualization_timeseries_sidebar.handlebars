<fieldset>
    <legend>{{t "dataset.visualization.sidebar.chart_display_settings"}}</legend>
    <div>
        <div class="value field">
            <div class='labels'>
                <label>{{t "dataset.visualization.sidebar.value"}}</label>
                <span class="column_hint">{{t "dataset.visualization.sidebar.hint.numeric"}}</span>
            </div>

            {{#if numericColumns.length}}
            <select>
                {{#each numericColumns}}
                <option value='{{this}}'>{{this}}</option>
                {{/each}}
            </select>
            {{else}}
            <span class='no_columns'>{{t "dataset.visualization.sidebar.no_numerical_columns"}}</span>
            {{/if}}
        </div>

        <div class="time field">
            <div class='labels'>
                <label>{{t "dataset.visualization.sidebar.time"}}</label>
                <span class="column_hint">{{t "dataset.visualization.sidebar.hint.datetime"}}</span>
            </div>

            {{#if datetimeColumns.length}}
            <select>
                {{#each datetimeColumns}}
                <option value='{{this}}'>{{this}}</option>
                {{/each}}
            </select>
            {{else}}
            <span class='no_columns'>{{t "dataset.visualization.sidebar.no_datetime_columns"}}</span>
            {{/if}}
        </div>
    </div>

    <button class="create dialog" data-chart_type="{{{chartType}}}" data-name="{{{tableName}}}"
            data-dialog="Visualization">{{t "dataset.visualization.sidebar.create_chart"}}
    </button>
</fieldset>