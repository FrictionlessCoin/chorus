<fieldset>
    <legend>{{t "dataset.visualization.sidebar.chart_display_settings"}}</legend>
    <div>
        <div class="value field">
            <div class='labels'>
                <label>{{t "dataset.visualization.sidebar.value"}}</label>
                <span class="column_hint">{{t "dataset.visualization.sidebar.hint.numeric"}}</span>
            </div>

            {{#if numericColumnNames.length}}
            <select>
                {{#each numericColumnNames}}
                <option value='{{this}}'>{{this}}</option>
                {{/each}}
            </select>
            {{chooser_menu dataGroupingChoices className="value" translationKey="dataset.visualization.sidebar.group_by"}}
            {{else}}
            <span class='no_columns'>{{t "dataset.visualization.sidebar.no_numerical_columns"}}</span>
            {{/if}}
        </div>

        <div class="time field">
            <div class='labels'>
                <label>{{t "dataset.visualization.sidebar.time"}}</label>
                <span class="column_hint">{{t "dataset.visualization.sidebar.hint.datetime"}}</span>
            </div>

            {{#if datetimeColumnNames.length}}
            <select>
                {{#each datetimeColumnNames}}
                <option value='{{this}}'>{{this}}</option>
                {{/each}}
            </select>
            {{chooser_menu dateTimeIntervals className="datetime" translationKey="dataset.visualization.sidebar.interval"}}
            {{else}}
            <span class='no_columns'>{{t "dataset.visualization.sidebar.no_datetime_columns"}}</span>
            {{/if}}
        </div>
    </div>

    <div class="button_wrapper">
        <button class="create">{{t "dataset.visualization.sidebar.create_chart"}}</button>
        <button class="cancel hidden">{{t "actions.cancel"}}</button>
    </div>
</fieldset>