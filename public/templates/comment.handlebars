<form>
    {{! maxlength is HTML5 only, so be sure to use the jquery limitMaxLength plugin as well. }}
    <textarea class="required" name="body" placeholder="{{t "comments.placeholder" commentSubject=entityTitle}}" tabindex="1" maxlength="256">{{body}}</textarea>

    <div class="modal_controls">
        <button type="button" class="cancel" tabindex=3>{{t "actions.cancel"}}</button>
        <button type="submit" class="submit" tabindex=2>{{t "comments.button.create"}}</button>
    </div>
</form>
