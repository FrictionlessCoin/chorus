<div class="activity_item">
    <div class="icon">
        <a href="{{iconHref}}"><img src="{{iconSrc}}"/></a>
    </div>
    <div class="activity_content">
        <div class="activity_header">
            {{{headerHtml}}}
        </div>
        <div class="body">{{body}}</div>
        <div class="timestamp">{{relativeTimestamp timestamp}}</div>
        <div class="links">
            <a class="comment dialog" data-dialog="Comment" data-entity-type="{{entityType}}" data-entity-id="{{id}}" data-entity-title="{{entityTitle}}" href="#">{{t "activity_stream.comment"}}</a>
        </div>
    </div>
</div>

{{#if subComments.length}}
    <ul class="comments">
        {{#eachWithMoreLink subComments 2 "activity_stream.comments.more" "activity_stream.comments.less"}}
            <li data-comment-id="{{id}}" class="{{moreClass}} activity_item">
                <div class="icon">
                    <a href="{{authorShowUrl}}">
                        <img title="{{displayName}}" src="{{imageUrl}}"/>
                    </a>
                </div>
                <div class="comment_content">
                    <div class="comment_header">
                        <a href="{{{authorShowUrl}}}" class="author">{{displayName}}</a>
                    </div>
                    {{#if body}}
                        <div class="body">{{body}}</div>
                    {{/if}}
                    <div class="timestamp">{{relativeTimestamp timestamp}}</div>
                </div>
            </li>
        {{/eachWithMoreLink}}
    </ul>
{{/if}}