<div>
    <img src="{{{imageUrl}}}"/>
</div>
<div>
    <div class="activity_header">
        {{{headerHtml}}}
    </div>
    <div class="body">{{body}}</div>
    <div class="timestamp">{{relativeTimestamp timestamp}}</div>
    <div class="more_comments">
        <ul>
            {{#each subComments}}
                <li>
                    <img src="{{{imageUrl}}}"/>
                    <a href="{{{authorShowUrl}}}" class="author">{{displayName}}</a>
                    <div class="body">{{body}}</div>
                    <div class="timestamp">{{relativeTimestamp timestamp}}</div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>