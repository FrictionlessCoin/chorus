<div class="sub_header">
    {{#if sharedAccount}}
        <span class="details_text">{{t "instances.shared_account"}}</span>
        <a href="#" class="alert" data-alert="RemoveSharedAccount">{{t "instances.permissions_dialog.switch_to_individual"}}</a>
    {{else}}
        <span class="individual_accounts_count">{{t "instances.sidebar.x_individual_accounts" count=models.length}}</span>
        <a href="#" class="alert" data-alert="AddSharedAccount">{{t "instances.permissions_dialog.switch_to_shared"}}</a>
        <button class='add_account'>{{t "instances.permissions_dialog.add_account"}}</button>
    {{/if}}
</div>
<div class="collection_list">
    <ul>
        {{#each models}}
            <li data-id={{id}}>
                <div class="image">
                    <img class="profile" src="{{imageUrl}}"/>
                </div>
                {{#if isNew}}
                    <select class="name"></select>
                {{else}}
                    <div class="name" title="{{ownerFullName}}">{{fullName}}</div>
                {{/if}}
                <div class="links">
                    <span class="owner">{{t "instances.permissions.owner"}}</span>
                    <a href="#" class="edit">{{t "instances.permissions.edit"}}</a>
                </div>
                <div class="credentials">
                    <div class="field_wrapper">
                        <label>{{t "instances.permissions.username"}}</label>
                        <input type="text" name="dbUserName" maxlength="256" value="{{dbUserName}}"/>
                    </div>
                    <div class="field_wrapper">
                        <label>{{t "instances.permissions.password"}}</label>
                        <input type="password" maxlength="256" name="dbPassword"/>
                    </div>
                    <div class="actions">
                        <a href="#" class="save">{{t "actions.save_changes"}}</a><a href="#" class="cancel">{{t "actions.cancel"}}</a>
                    </div>
                </div>
            </li>
        {{/each}}
    </ul>
</div>
<div class="controls">
    <button type="button" class="cancel" tabindex=3>{{t "actions.close_window"}}</button>
</div>

