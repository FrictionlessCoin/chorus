{{#if shown}}
    <div class="details">
        <div class="right">
            {{#if moreResults}}
                <span class="count">{{t "search.count" shown=shown total=total}}</span>
                <a class="show_all" data-type="workspace" href="#">{{t "search.show_all"}}</a>
            {{else}}
                <span class="count">{{t "search.count_short" shown=shown}}</span>
            {{/if}}
        </div>
        <span class="title">{{t "workspaces.title"}}</span>
    </div>

    <ul>
        {{#each models}}
            <li class="result_item" data-cid={{model.cid}}>
                <div class="spacer left"></div>
                <img class="icon" src="{{iconUrl}}"></img>
                <div class="description">
                    <a class="name" href="{{showUrl}}">{{{displaySearchMatch "name"}}}</a>
                    <div class="description_content">{{#if description}}&#8220;{{{displaySearchMatch "description"}}}&#8221;{{/if}}</div>
                    <div class="comments_container"/>
                </div>
                <div class="spacer right"></div>
            </li>
        {{/each}}
    </ul>
{{/if}}
