{{#each models}}
    <li data-id="{{id}}" {{#unless active}}class="archived"{{/unless}}>
        <span class="spacer left"/>
        <a class="image" href="{{showUrl}}">
            <img src="{{imageUrl}}"/>
        </a>
        <div class="text">
            <div class="main">
                <a class="name" href="{{showUrl}}">
                    <span title="{{name}}">{{name}}</span>
                </a>
            </div>
            <div class="summary">
                {{#if isTruncated }}
                    <span class="truncated">{{truncatedSummary}} <a href ="#" class="link">{{t "workspace.more"}}</a></span>
                    <span class="full">{{summary}} <a href ="#" class="link">{{t "workspace.less"}}</a></span>
                {{else}}
                    {{summary}}
                {{/if}}
            </div>
            <div class="details">
                <span class="owner">
                    {{#if active}}
                        {{t "workspaces.owned_by"}}
                        <a href="{{ownerUrl}}">{{ownerFullName}}</a>
                    {{else}}
                        {{t "workspaces.archived_by"}}
                        <a href="{{archiverUrl}}">{{archiverFullName}}</a>
                        <span class="timestamp">{{relativeTimestamp archivedTimestamp}}</span>
                    {{/if}}


                </span>
                {{#unless isPublic}}
                    <span class="private">
                        <img src="/images/workspace-lock.png"/>
                        {{t "workspaces.private"}}
                    </span>
                {{/unless}}
            </div>
        </div>
        <span class="spacer right"/>
    </li>
{{/each}}
