<div class="details">
    <div class="right">
        {{#if moreResults}}
            <span class="count">{{t "search.count" shown=shown total=total}}</span>
            <a class="show_all" href="#">{{t "search.show_all"}}</a>
        {{else}}
            <span class="count">{{t "search.count_short" shown=shown}}</span>
        {{/if}}
    </div>
    <span class="title">{{t "dataset.title_plural"}}</span>
</div>

<ul>
    {{#each models}}
        <li class="result_item" data-id={{id}}>
            <div class="spacer_left"></div>
            <img class="icon" src="{{iconUrl}}" title="{{humanizedTabularDataType this}}"/>
            <div class="description">
                <a class="name" href="{{showUrl}}">{{{displaySearchMatch "objectName"}}}</a>
                <div class="location">
                    {{{tabularDataLocation model}}}
                    {{{usedInWorkspaces workspaces dataset}}}
                </div>

                <div class="comments">
                    {{#each comments}}
                    <div class="comment">
                        <span class="comment_type">
                        {{#if isInsight}}
                            {{t "insight.title"}}:
                        {{else}}
                            {{t "activity_stream.comment"}}:
                        {{/if}}
                        </span>
                        <span class="comment_content">&#8220;{{{displaySearchMatch "content"}}}&#8221;</span>
                    </div>
                    {{/each}}

                    {{#if moreCommentCount}}
                    <div class='hasMore'>
                        <span class="and">{{t "search.comments_more.and"}}</span>
                        <a href="#" class="show_more_comments">
                            {{t "search.comments_more" count=moreCommentCount}}
                        </a>
                    </div>
                    {{/if}}

                    <div class="moreComments hidden">
                        {{#each moreComments}}
                            <div class="comment">
                                <span class="comment_type">
                                {{#if isInsight}}
                                    {{t "insight.title"}}:
                                {{else}}
                                    {{t "activity_stream.comment"}}:
                                {{/if}}
                                </span>
                                <span class="comment_content">&#8220;{{{displaySearchMatch "content"}}}&#8221;</span>
                            </div>
                        {{/each}}
                        <a class="show_fewer_comments" href="#">{{t "search.comments_less"}}</a>
                    </div>
                </div>
            </div>
            <div class="spacer_right"></div>
        </li>
    {{/each}}
</ul>
