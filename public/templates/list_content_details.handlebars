{{#if loaded}}
    {{#unless hideCounts}}
        <div class="count">
            <span class="number">{{records}}</span> {{modelClass}}s
        </div>
    {{/unless}}

    {{#if multiPage}}
        <div class="pagination">
            {{#unless hideCounts}}
                <div class="page">
                    {{t "pagination.page"}} <span class="current">{{pagination.page}}</span> {{t "pagination.of"}} <span class="total">{{pagination.total}}</span>
                </div>
            {{/unless}}

            <div class="links">
                {{#if prevPage}}
                    <a class="previous"><span>{{t "pagination.previous"}}</span></a>
                {{else}}
                    <span class="previous">{{t "pagination.previous"}}</span>
                {{/if}}
                {{#if nextPage}}
                    <a class="next"><span>{{t "pagination.next"}}</span></a>
                {{else}}
                    <span class="next">{{t "pagination.next"}}</span>
                {{/if}}
            </div>
        </div>
    {{/if}}
{{else}}
    <div class="loading">{{t "loading"}}</div>
{{/if}}
{{#if addButton }}
    {{#if addButton.addButtonView}}
        <button type="button" class="dialog" data-dialog="{{addButton.addButtonView}}">{{addButton.addButtonText}}</button>
    {{else}}
        {{#if addButton.addButtonUrl}}
            <a href="{{addButton.addButtonUrl}}"><button type="button">{{addButton.addButtonText}}</button></a>
        {{/if}}
    {{/if}}
{{/if}}