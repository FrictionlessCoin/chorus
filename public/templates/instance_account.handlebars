<form>
    <label for="dbUserName">{{t "instances.account.enter_credentials"}}</label>
    <input
        type="text"
        id="dbUserName"
        name="dbUserName"
        maxlength=256
        placeholder='{{t "instances.account.username"}}'
        tabindex="1"
        value={{dbUserName}}
    ></input>
    <input
        type="password"
        name="dbPassword"
        maxlength=256
        placeholder='{{t "instances.account.password"}}'
        tabindex="1"
    ></input>

    <div class="controls">
        <button type="button" class="cancel" tabindex=4>{{t "actions.cancel"}}</button>
        <button type="submit" class="submit" tabindex=3>{{t "instances.account.button.save"}}</button>
    </div>
</form>
