<div class='instance_provider greenplum_instance'>
    <div class="details">{{t "instances.list.type.greenplum"}}</div>
    <ul class="list">
        {{#each models}}
            {{#if isGreenplum}}
                <li class="instance" data-instance-id="{{id}}">{{renderTemplate "instance" this}}</li>
            {{/if}}
        {{/each}}
    </ul>
    {{#unless hasGreenplum}}
        <div class="no_instances">{{t "instances.none"}}</div>
    {{/unless}}
</div>

