<fieldset>
    <legend>
        <div>
            <input type="radio" name="sandbox_type" id="create_sandbox_within_instance" checked="checked"/>
            <label for="create_sandbox_within_instance">{{t "sandbox.create.within_instance"}}</label>
        </div>
        <div>
            <input type="radio" name="sandbox_type" id="create_sandbox_as_standalone"/>
            <label for="create_sandbox_as_standalone">{{t "sandbox.create.as_standalone"}}</label>
        </div>
    </legend>
    <form>
        <div class="instance">
            <div class="header_container">
                <label class="required">{{t "sandbox.select.instance"}}</label>
            </div>
            <div class="loading_text">
                {{t "loading"}}
                <span class="loading_spinner"></span>
            </div>

            <div class="unavailable">{{t "sandbox.unavailable.instance"}}</div>
            <div class="select_container">
                <select name="instance"></select>
            </div>
        </div>
        <div class="database">
            <div class="header_container">
                <a class="new_database hidden" href="">{{t "sandbox.new.database"}}</a>
                <label class="required hidden">{{t "sandbox.select.database"}}</label>
            </div>
            <div class="loading_text hidden">
                {{t "loading"}}
                <span class="loading_spinner"></span>
            </div>

            <div class="unavailable">{{t "sandbox.unavailable.database"}}</div>
            <div class="select_container">
                <select name="database"></select>
            </div>
            <div class="create_container hidden">
                <input class="name" name="name" placeholder="{{t "sandbox.database.name.placeholder"}}"></input>
                <div class="row controls">
                    <button type="submit" class="submit">{{t "actions.save"}}</button>
                    <button class="cancel">{{t "actions.cancel"}}</button>
                </div>
            </div>
        </div>
        <div class="schema">
            <div class="header_container">
                <a class="new_schema hidden" href="">{{t "sandbox.new.schema"}}</a>
                <label class="required hidden">{{t "sandbox.select.schema"}}</label>
            </div>
            <div class="loading_text hidden">
                {{t "loading"}}
                <span class="loading_spinner"></span>
            </div>

            <div class="unavailable">{{t "sandbox.unavailable.schema"}}</div>
            <div class="select_container">
                <select name="schema"></select>
            </div>
            <div class="create_container hidden">
                <input class="name" name="name" value="public" placeholder="{{t "sandbox.schema.name.placeholder"}}" ></input>
                <div class="row controls hidden">
                    <button type="submit" class="submit" tabindex=1>{{t "actions.save"}}</button>
                    <button class="cancel" tabindex=2>{{t "actions.cancel"}}</button>
                </div>
            </div>
        </div>
    </form>
</fieldset>
<div class="modal_controls">
    <label class="required"/><label>{{t "validation.required_field"}}</label>
    <button type="button" class="cancel" tabindex=2>{{t "actions.cancel"}}</button>
    <button type="submit" class="submit" disabled="disabled" tabindex=1>{{t "sandbox.add_sandbox"}}</button>
</div>
