<form>
    <label class="required">{{t "workspace.settings.name"}}</label>
    <input type="text" name="name" maxlength="256" value="{{name}}"/>

    <label>{{t "workspace.settings.summary"}}</label>
    <textarea name="summary" maxlength="4095" rows="6">{{summary}}</textarea>

    <div class="controls">
        <button type="button" class="cancel">{{t "actions.cancel"}}</button>
        <button type="submit" class="submit">{{t "actions.save_changes"}}</button>
    </div>
</form>