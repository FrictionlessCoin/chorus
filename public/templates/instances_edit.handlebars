<form>
    <label class="required">{{t "instances.dialog.instance_name"}}</label>
    <input type="text" name="name" maxlength="256" value="{{name}}" tabindex="1"/>

    <label>{{t "instances.dialog.description"}}</label>
    <textarea name="description" maxlength="4095" rows="6" tabindex="2">{{description}}</textarea>
    <input type="hidden" name="provisionType" value="{{provisionType}}"/>
    {{#if registeredInstance}}
    <label class="required" name="host">{{t "instances.dialog.host"}}</label>
    <label class="required" name="port">{{t "instances.dialog.port"}}</label>
    <input type="text" name="host" value="{{host}}" tabindex="1"/>
    <input type="text" name="port" value="{{port}}" tabindex="1"/>
    {{/if}}

    {{#if provisionedInstance}}
    <label name="host">{{t "instances.dialog.host"}}</label>
    <label name="port">{{t "instances.dialog.port"}}</label>
    <input type="text" disabled="disabled" name="host" value="{{host}}" tabindex="1"/>
    <input type="text" disabled="disabled" name="port" value="{{port}}" tabindex="1"/>

    <label>{{t "instances.dialog.size"}}</label>
    <input type="text" disabled="disabled" name="size" value="{{size}}" tabindex="1"/>
    {{/if}}

    <label>{{ t "instances.dialog.edit_owner"}}</label>
    <select name="owner" class="owner">
        {{#each users}}
        <option value={{id}}>{{displayNameFromPerson attributes}}</option>
    {{/each}}
</select>

<div class="controls">
<button type="button" class="cancel" tabindex="100">{{t "actions.cancel"}}</button>
<button type="submit" class="submit" tabindex="99">{{t "instances.edit_dialog.save"}}</button>
</div>
</form>


