{{> errorDiv }}
{{#ifAdmin}}
   <div class="edit_photo">
       <img src="/images/default-user-icon.png" class="profile"/>
       <br/>
       <a>Edit photo</a>
   </div>
   <div class="fields">
       <form action="/edc/users" method="post">

           <div class="row">
               <span class="left">
                   <label class="required">First Name</label>
                   <input type="text" name="firstName"/>
               </span>

               <span class="right">
                   <label class="required">Last Name</label>
                   <input type="text" name="lastName"/>
               </span>
           </div>

           <div class="row">
               <span class="left">
                   <label class="required">Username</label>
                   <input type="text" name="userName"/>
               </span>

               <span class="right admin">
                   <label class="placeholder"></label>
                   <input type="checkbox" name="admin" id="admin-checkbox"/>
                   <label for="admin-checkbox">Make this user an administrator</label>
               </span>
           </div>

           <div class="row">
               <span class="left">
                   <label class="required">Email</label>
                   <input type="text" name="emailAddress"/>
               </span>
           </div>

           <div class="row">
               <span class="left">
                   <label class="required">Password</label>
                   <input type="password" name="password"/>
               </span>

               <span class="right">
                   <label class="required">Confirm Password</label>
                   <input type="password" name="passwordConfirmation"/>
               </span>
           </div>

           <div class="row">
               <span class="left">
                   <label>Title</label>
                   <input type="text" name="title"/>
               </span>

               <span class="right">
                   <label>Department</label>
                   <input type="text" name="department"/>
               </span>
           </div>

           <div class="row controls">
               <span class="left">
                   <button type="submit">Add This User</button>
                   <button type="cancel">Cancel</button>
               </span>
           </div>
       </form>
   </div>
{{else}}
 <p class="aint_admin">You aren't an admin.</p>
{{/ifAdmin}}
