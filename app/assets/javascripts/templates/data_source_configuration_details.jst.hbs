<dl>
    {{#if host}}
    <dt>{{t "data_sources.sidebar.host"}}</dt>
    <dd title="{{host}}">{{host}}</dd>
    <br />
    {{/if}}
    {{#if streamUrl}}
    <dt>{{t "data_sources.sidebar.stream_url"}}</dt>
    <dd class="streamUrl" title="{{streamUrl}}">{{streamUrl}}</dd>
    <br />
    {{/if}}
    {{#if port}}
    <dt>{{t "data_sources.sidebar.port"}}</dt>
    <dd title="{{port}}">{{port}}</dd>
    <br />
    {{/if}}
    {{#if size}}
    <dt>{{t "data_sources.sidebar.size"}}</dt>
    <dd title="{{size}}">{{size}}GB</dd>
    <br />
    {{/if}}
    {{#if shared}}
    <dt>{{t "data_sources.shared_account"}}</dt>
    <dd class="shared_account_info" title="{{sharedAccountDetails}}">{{sharedAccountDetails}}</dd>
    {{/if}}
    {{#if version}}
    <dt>{{t "data_sources.version"}}</dt>
    <dd title="{{version}}">{{version}}</dd>
    {{/if}}
    {{#if ownerName}}
    <dt>{{t "data_sources.permissions.owner"}}</dt>
    <dd title="{{ownerName}}">{{ownerName}}</dd>
    {{/if}}
</dl>
