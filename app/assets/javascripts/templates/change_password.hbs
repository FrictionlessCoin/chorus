<form>
    <div class="girdle">
    <div class="content">
        {{t "user.change_password.info"}}
    </div>


        <div class="input">
            <p class="form_label">{{t "users.change_password.label"}}</p>
            <input type="password" name="password" maxlength="256" placeholder="{{t "users.change_password.placeholder"}}" tabindex="1" autocomplete="off"/>
            <p class="form_label">{{t "users.confirm_password.label"}}</p>
            <input type="password" name="passwordConfirmation" maxlength="256" placeholder="{{t "users.confirm_password.placeholder"}}" tabindex="2" autocomplete="off"/>
        </div>
        
    </div>
    {{formControls "change_password.button" }}

</form>