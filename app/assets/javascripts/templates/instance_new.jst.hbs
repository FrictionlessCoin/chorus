<label for="data_sources">{{t "datasource.type"}}</label><br/>
<select class="data_sources" id="data_sources">
    <option selected name="select_one" value="">{{t "selectbox.select_one"}}</option>
    <option name="register_existing_greenplum" value="register_existing_greenplum">{{t "datasource.greenplum"}}</option>
    <option name="register_existing_hadoop"  value="register_existing_hadoop">{{t "datasource.hdfs"}}</option>
    {{#if auroraInstalled}} <option name="create_new_greenplum" value="create_new_greenplum">{{t "instances.new_dialog.create_new_greenplum"}}</option>{{/if}}
    {{#if gnipConfigured}} <option name="register_existing_gnip" value="register_existing_gnip">{{t "datasource.gnip"}}</option>{{/if}}
</select>

<div class="data_sources_form collapsed register_existing_greenplum">
    <div class="description">{{t "instances.new_dialog.register_existing_greenplum_help_text"}}</div>
    <form>
        <input type="hidden" name="provision_type" value="register" />
        <label class="required">{{t "instances.dialog.instance_name"}}</label>
        <input type="text" name="name" maxlength="64"/>

        <label>{{t "instances.dialog.description"}}</label>
        <textarea rows="3" name="description"/>

        <label class="required" name="host">{{t "instances.dialog.host"}}</label>
        <label class="required" name="port">{{t "instances.dialog.port"}}</label>
        <input type="text" name="host"/>
        <input type="text" name="port"/>

        <label class="required" name="maintenanceDb">{{t "instances.dialog.maintenance_db"}}</label>
        <input type="text" name="maintenanceDb" value="postgres"/>

        <label class="required db_username" name="dbUsername">{{t "instances.dialog.database_account"}}</label>
        <label class="required db_password" name="dbPassword">{{t "instances.dialog.database_password"}}</label>
        <input class="db_username" type="text" name="dbUsername" maxlength="256"/>
        <input class="db_password" type="password" name="dbPassword" maxlength="256"/>

        <input type="checkbox" name="shared" id="register_greenplum_shared"/>
        <label for="register_greenplum_shared">{{t "instances.dialog.is_community_account"}}
            <img class="help" src="/images/more-info.png" data-text='{{t "instances.new_dialog.is_community_account.help_text"}}'/>
        </label>
    </form>
</div>

{{#if auroraInstalled}}
<div class="data_sources_form collapsed create_new_greenplum">
    <div class="description">{{t "instances.new_dialog.create_new_greenplum_help_text"}}</div>
    <form>
        {{renderTemplate "instance/provision" this}}
    </div>
</div>
{{/if}}

<div class="data_sources_form collapsed register_existing_hadoop">
    <div class="description">{{t "instances.new_dialog.register_existing_hadoop_help_text"}}</div>
    <form>
        <input type="hidden" name="provision_type" value="registerHadoop" />
        <input class="hidden" type="checkbox" name="shared" checked="checked"/>

        <label class="required">{{t "instances.dialog.instance_name"}}</label>
        <input type="text" name="name" maxlength="64"/>

        <label>{{t "instances.dialog.description"}}</label>
        <textarea rows="3" name="description"/>

        <label class="required" name="host">{{t "instances.dialog.host"}} </label>
        <label class="required" name="port">{{t "instances.dialog.port"}}</label>
        <input type="text" name="host"/>
        <input type="text" name="port"/>

        <label class="username required" name="username">{{t "instances.dialog.hadoop_account"}}</label>
        <label class="group_list required" name="groupList">{{t "instances.dialog.hadoop_group_list"}}</label>
        <input class="username" type="text" name="username" maxlength="255"/>
        <input class="group_list" type="text" name="groupList" maxlength="255"/>
    </form>
</div>

{{#if gnipConfigured}}
<div class="data_sources_form collapsed register_existing_gnip">
    <div class="description">{{t "instances.new_dialog.register_existing_gnip_help_text"}}</div>
    <form>
        <input type="hidden" name="provision_type" value="registerGnip" />

        <label class="required">{{t "instances.dialog.gnip_instance_name"}}</label>
        <input type="text" name="name" maxlength="64"/>

        <label>{{t "instances.dialog.description"}}</label>
        <textarea rows="3" name="description"/>

        <label class="required gnip_host" name="host">
            {{t "instances.dialog.gnip_url"}}
            <img src="/images/more-info.png" class="help" data-text='{{t "instances.dialog.gnip_help_text"}}'/>
        </label>
        <input class= "gnip_host" type="text" name="streamUrl" />

        <label class="gnip_username required" name="username">{{t "instances.dialog.gnip_username"}}</label>
        <label class="gnip_password required" name="password">{{t "instances.dialog.gnip_password"}}</label>
        <input class="gnip_username" type="text" name="username" maxlength="255"/>
        <input class="gnip_password" type="password" name="password" maxlength="255"/>
    </form>
</div>
{{/if}}

<div class="modal_controls">
    <label class="required"/><label>{{t "validation.required_field"}}</label>
    <button type="button" class="cancel" tabindex="100">{{t "actions.cancel"}}</button>
    <button type="submit" class="submit" tabindex="99" disabled="disabled">{{t "instances.new_dialog.save"}}</button>
</div>
