<form action="/workspaces/{{workspace.id}}/workfiles" enctype="multipart/form-data" method="post">
    <div class="details">
        <img src="/images/workfiles/medium/plain.png"/>
        <div class="file">
            <div class="fileName"/>
            <span class="file-wrapper">
                <button class="choose">{{t "workfiles.import_select_file"}}</button>
                <input type="file" class="file-input" name="workfile[versions_attributes][0][contents]"/>
            </span>
            <span class="defaultText">{{t "workfile.no_file_selected"}}</span>
        </div>
    </div>
    <div class="comment">
        <input type="text" name="workfile[description]" placeholder='{{t "workfiles.import_placeholder"}}' tabindex="1" maxlength="256"></input>
    </div>

    <div class="modal_controls">
        <button type="button" class="cancel" tabindex=4>{{t "actions.cancel"}}</button>
        <button type="button" class="submit" disabled="disabled" tabindex=3>{{t "workfiles.button.import"}}</button>
    </div>
</form>

