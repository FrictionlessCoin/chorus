{{#each models}}
    <div class="card">

        <div class='name_row'>
            <a class="name" href="{{showUrl}}">
                <span title="{{name}}">{{name}}</span>
            </a>
        </div>

        {{#if summary}}
            <div class='info_icon'>
                <i class='icon-info-sign' title="{{summary}}"></i>
            </div>
        {{/if}}

        <div>
            <span class="ownerlabel">{{t "workspace.owner"}}:</span>
            <a class="owner" href="{{ownerShowUrl}}">
                <span title="{{ownerName}}">{{ownerName}}</span>
            </a>
        </div>

    </div>
{{/each}}
