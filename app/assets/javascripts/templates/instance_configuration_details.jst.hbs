<dl>
    {{#if host}}
    <dt>{{t "instances.sidebar.host"}}</dt>
    <dd title="{{host}}">{{host}}</dd>
    <br />
    {{/if}}
    {{#if port}}
    <dt>{{t "instances.sidebar.port"}}</dt>
    <dd title="{{port}}">{{port}}</dd>
    <br />
    {{/if}}
    {{#if size}}
    <dt>{{t "instances.sidebar.size"}}</dt>
    <dd title="{{size}}">{{size}}GB</dd>
    <br />
    {{/if}}
    {{#if shared}}
    <dt>{{t "instances.shared_account"}}</dt>
    <dd class="shared_account_info" title="{{sharedAccountDetails}}">{{sharedAccountDetails}}</dd>
    {{/if}}
    {{#if version}}
    <dt>{{t "instances.version"}}</dt>
    <dd title="{{version}}">{{version}}</dd>
    {{/if}}
</dl>
