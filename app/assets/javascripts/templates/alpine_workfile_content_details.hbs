<ul class="list_horizontal">
    <li>
        {{#if canOpen}}
        <button class="button button_action open_file" {{#unless executionLocations}}disabled="disabled"{{/unless}}>{{t "work_flows.show.open"}}</button>
        {{else}}
        <button class="invisible button_action"></button>
        {{/if}}
    </li>
    <li>
        {{#if executionLocations}}
            {{#if executionLocationIsHdfs}}
                <span class="execution_location">{{t "work_flows.show.hdfs_execution_location" dataSourceName=dataSourceName}}</span>
            {{else}}
                <span class="execution_location">{{t "work_flows.show.gpdb_execution_location" dataSourceName=dataSourceName databaseName=databaseName}}</span>
            {{/if}}
        {{else}}
        <span class="execution_location">{{t "work_flows.show.no_execution_location"}}</span>
        {{/if}}
    </li>
    {{#if canUpdate}}<li>
        <a class="change_workfile_database" href="#">Change</a>
    </li>{{/if}}
</ul>