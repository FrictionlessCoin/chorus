<ul class="list_horizontal">
    <li>
        {{> multipleSelectionHeader}}
    </li>
    <li>
        <button class="add_data_source button_action_primary">{{t "data_sources.add.title"}}</button>
    </li>
    <li>
        {{#if loaded}}
            <div class="count">
                <span class="number">{{count}}</span> {{pluralize count "data_sources.title"}}
