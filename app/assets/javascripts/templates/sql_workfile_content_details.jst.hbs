<button class="run_file"><span class="run_description">{{t "workfile.content_details.run_file"}}</span><span class="down_arrow"></span></button>
<div class="execution_schema">
{{t "workfile.content_details.execution_schema"}}:  {{schemaName}}
</div>
<a class="change_workfile_schema" href="#">Change</a>

{{renderTemplate "workfile_content_details" .}}

<div class="hidden">
<div class="run_workfile">
    <ul class="run_menu">
        <li>
            {{#if schemaName}}
                <span class="menu_shortcut">{{hotKeyName "r"}}</span>
                <a href="#" class="run_default">
                    {{t "workfile.content_details.run"}}
                </a>
            {{else}}
                <span class="run_default">{{t "workfile.content_details.run"}}</span>
            {{/if}}
        </li>
        <li>
        {{#if schemaName}}
            <a href="#" class="run_and_download">{{t "workfile.content_details.run_and_download"}}</a>
        {{else}}
            <span class="run_and_download">{{t "workfile.content_details.run_and_download"}}</span>
        {{/if}}
        </li>

        <li>
            <span class="menu_shortcut">{{hotKeyName "e"}}</span>
            <a href="#" class="run_selection">
            {{#if executionSchemaIsSandbox}}
                {{t "workfile.content_details.run_selection_sandbox"}}
            {{else}}
                {{#if schemaName}}
                    {{t "workfile.content_details.run_selection_schema" schemaName=schemaName}}
                {{else}}
                    {{t "workfile.content_details.run_selection_sandbox"}}
                {{/if}}
            {{/if}}
        </a></li>
        <li>
            <a href="#" class="run_selection_and_download">{{t "workfile.content_details.run_selected_and_download"}}</a>
        </li>
        <li>
            <a href="#" class="run_other_schema">{{t "workfile.content_details.run_in_another_schema"}}</a>
        </li>
    </ul>
</div>
</div>
