<div class="spacer_left"></div>
<span class="image"><img class="icon" src="{{iconUrl}}"></img></span>
<div class="description">
    <a class="name" href="{{showUrl}}">{{displaySearchMatch "fileName"}}</a>

    {{#if tags}}
    <div class="tag_list">
        {{t "tag_list.title"}}:
        {{#each tags}}
            <a class="tag_name" href="#">{{this.name}}</a>
        {{/each}}
    </div>
    {{/if}}

    <div class="location">{{usedInWorkspaces workspaces resource}}</div>
    <div class="description_content">{{displaySearchMatch "description"}}</div>

    <div class="comments_container"/>
</div>
<div class="spacer_right"></div>
