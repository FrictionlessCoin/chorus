<div class="info">
    <h1 class='full_name'>{{displayName}}</h1>
    <span class='title'>{{title}}</span>
</div>

<div class="actions">
    <ul>
        {{#if listMode}}
            <li><a class="edit_tags">{{t "sidebar.edit_tags"}}</a></li>
        {{/if}}
        {{#if permission}}
            {{#unless isInEditMode}}
            <li><a href="#/users/{{id}}/edit" class="edit_user">{{t "actions.edit_profile"}}</a></li>
            {{/unless}}


            {{#if deleteAvailable}}
            <li><a href="#" class="alert delete_user" data-id="{{id}}" data-alert="UserDelete">{{t
                "actions.delete_user"}}</a></li>
            {{/if}}

            {{#if changePasswordAvailable}}
            <li><a href="#" class="dialog change_password" data-username="{{username}}" data-dialog="ChangePassword"> {{t
                "actions.change_password"}}</a></li>
            {{/if}}

            {{#if showApiKey}}
            <li><a href="#" class="dialog show_api_key" data-dialog="ShowApiKey"> {{t "actions.show_api_key"}}</a></li>
            {{/if}}
        {{/if}}
    </ul>
</div>

<div class="tab_control"></div>
