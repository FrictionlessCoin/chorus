<img src="{{iconUrl}}" class="icon"/>

<div class="right_of_image">
    <h1 title="{{fileName}}">{{fileName}}</h1>
    <textarea id="tag_editor" class='tag_editor borderless' disabled="true"></textarea>
</div>

<a href="#" class='edit_tags'>
    {{#if hasTags}}
    {{t "tags.edit_tags"}}
    {{else}}
    {{t "tags.add_tags"}}
    {{/if}}
</a>

<a href="#" class='save_tags hidden'>{{t "tags.save_tags"}}</a>
