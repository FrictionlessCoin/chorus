{{#if hasImage}}
    <div class="image">
        <img class="workspace_image" src="{{imageUrl}}" />
    </div>
{{/if}}
<div class="after_image{{#if hasImage}} hidden{{/if}}">
    <div class='actions'>
        <h1 title="{{name}}">{{name}}</h1>
        <ul>
            {{#if active}}
                <li><a class="new_note" href="#">{{t "actions.add_note"}}</a></li>
                <li><a class="new_insight" href="#">{{t "actions.add_insight"}}</a></li>
            {{/if}}
            <li><a href="#" class="edit_workspace">
                {{#ifAny workspaceAdmin canUpdate}}
                    {{t "actions.edit_workspace"}}
                {{else}}
                    {{t "actions.view_workspace_settings"}}
                {{/ifAny}}
            </a></li>

            {{#if workspaceAdmin}}
                {{#if active}}
                    <li><a class="edit_workspace_members" href="#">{{t "workspace.edit_members"}}</a></li>
                    {{#unless hasSandbox}}
                        <li><a class="new_sandbox" href="#">{{t "sandbox.create_a_sandbox"}}</a></li>
                    {{/unless}}
                {{/if}}
            {{/if}}
            {{#if canKaggle}}
                <li><a class="kaggle" href="{{kaggleUrl}}" >{{t "actions.workspace_find_kaggle_contributors"}}</a></li>
            {{/if}}
            {{#if workspaceAdmin}}
                <li><a class="delete_workspace alert" href="#">{{t "actions.delete_workspace"}}</a></li>
            {{/if}}
        </ul>
    </div>

    <div class="workspace_member_list"></div>
</div>
