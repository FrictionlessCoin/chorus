<form class="edit_project_status">

    <label name='projectStatus'>Status</label>
    <select name="projectStatus">
        {{#each options}}
            <option value='{{value}}' {{#if selected}}selected{{/if}}>{{t nameKey}}</option>
        {{/each}}
    </select>
    <div class="reason_container">
        <label name='reason' class='required'>Reason</label>
        <input name='reason' type='text'/>
    </div>

    {{formControlsWithDisabledSubmit "workspace.project.update_status"}}
</form>