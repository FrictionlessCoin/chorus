<span class="spacer_left"/>

<input type="checkbox"/>

<span class="image">
    <img src="{{iconSrc}}"/>
</span>

<div class="text">

    <div class="main">
        <a title="{{fileName}}" class="name" href="{{url}}">{{fileName}}</a>
    </div>

    {{#if tags}}
    <div class="tag_list">
        {{t "tag_list.title"}}:
        {{#each tags}}
            <a class="tag_name" href="#">{{this.name}}</a>
        {{/each}}
    </div>
    {{/if}}

    <div class="details">
        {{#if tableauWorkbook}}
            {{fromTableau model}}
        {{/if}}
    </div>

    {{#if lastComment}}
        <div class="comment">
            <div class="body"></div>
            {{userProfileLink lastComment.creator}}
            <span class="comment_info">
                {{t "workfiles.commented_on"}} <span class="on">{{lastComment.on}}</span>
                {{#if otherCommentCount }}
                    - {{t "workfiles.other_comments" count=otherCommentCount}}
                {{/if}}
            </span>
        </div>
    {{/if}}

</div>
<span class="spacer_right"/>
