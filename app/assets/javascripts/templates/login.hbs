<div class="card">
    {{> errorDiv }}
    <form class="login" action="/auth/login/" method="post">
        <img class="logo {{#if alpineBranded}}alpine{{/if}}" src="{{#if alpineBranded}}images/alpine-logo.png{{else}}images/login-logo.png{{/if}}"/>
        <div class="content">
            <label for="username">{{t "login.username"}}</label>
            <input type="text" name="username" id="username" maxlength="256" autocomplete="off"/>

            <label for="password">{{t "login.password"}}</label>
            <input type="password" name="password" id="password" maxlength="256" autocomplete="off"/>
        </div>
        <div class="form_controls">
            <button type="submit" class="modalish">{{t "login.button"}}</button>
        </div>
    </form>
</div>
<footer>
    <div class="legal {{#if alpineBranded}}alpine{{/if}}">
        <p>
            {{t "login.version"}} <span class="version"></span>|<span class="copyright">{{#if alpineBranded}}{{{t "login.alpine_copyright" year=currentYear}}}{{else}}{{{t "login.copyright" year=currentYear}}}{{/if}}</span>
        </p>
    </div>
</footer>
