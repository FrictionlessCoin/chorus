<div>
    <div class="line">
        <div class="col cols-8 started_at"><strong>Started: </strong>{{displayTimestamp startedAt}}</div>
        <div class="col cols-ext finished_at"><strong>Finished: </strong>{{displayTimestamp finishedAt}}</div>
    </div>
    <table>
        <thead>
            <tr>
            <th>Name</th>
            <th>Started</th>
            <th>Finished</th>
            <th>Status</th>
            </tr>
        </thead>
        <tbody>
        {{#each jobTaskResults}}
        <tr>
            <td>{{name}}</td>
            <td>{{displayTimestamp startedAt}}</td>
            <td>{{displayTimestamp finishedAt}}</td>
            <td>
                {{#if payloadResultId}}
                    {{workflowResultLink this}}
                {{else}}
                    {{status}}
                    {{#if message}} - {{message}}{{/if}}</td>
                {{/if}}
        </tr>
        {{/each}}
        </tbody>
    </table>
</div>