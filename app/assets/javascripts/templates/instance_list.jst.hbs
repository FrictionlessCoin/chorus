<div class='instance_provider greenplum_instance'>
    <div class="details">{{t "instances.list.type.greenplum"}}</div>
    <ul class="list selectable">
        {{#each greenplum}}
            <li class="instance" data-type="greenplum" data-instance-id="{{id}}">{{renderTemplate "instance" this}}</li>
        {{/each}}
    </ul>
    {{#unless hasGreenplum}}
        <div class="no_instances">{{t "instances.none"}}</div>
    {{/unless}}
</div>

